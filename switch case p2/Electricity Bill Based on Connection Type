#include <stdio.h>
int main() {
    int Connection_type;
    int units;
    int bill=0;
    scanf("%d", &Connection_type);
    scanf("%d", &units);

    switch(Connection_type){
    case 1:
      if(units<=100){
         bill=units * 3; // 80 * 3 =240
      }
      else{
        bill=(100 * 3) + ((units - 100)*5); //100 * 3=300 80 *5=400 total=700-80=620
        bill=bill-80;
      }
       break;
          case 2: 
            if(units<=100){
                bill=units * 7; // 100 *7=700 
            }
           else{
            bill=(100 * 7)+((units-100)*10);//20*10=200 total=700+200=900
           }
            break;
         default:
            printf("Invalid");

    }
    printf("%d",bill);
    
    return 0;
}
